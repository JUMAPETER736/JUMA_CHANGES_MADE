<!-- catalog_layout.xml -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/gray_background"
    android:orientation="vertical"
    android:padding="24dp">



    <TextView
        android:id="@+id/catalogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:text="Catelogue"
        android:textAllCaps="true"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/first_margin"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/business_location_description"
        android:layout_marginTop="-11dp"
        android:background="@color/gray_two" />

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/add_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/rectangle_background"
            android:padding="35dp"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangle_background"
            android:src="@drawable/add"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addItem_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="22dp"
                android:paddingEnd="30dp"
                android:text="Add item1"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/describe_product"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:hint="Describe product"
                android:inputType="text"
                android:paddingStart="12dp"
                android:layout_below="@+id/addItem_text"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/describe_product"
                android:hint="Price"
                android:inputType="number"
                android:paddingStart="35dp"
                android:padding="12dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/describe_product"
                android:padding="12dp"
                android:text="MK"
                android:textSize="13sp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view"
            android:textColor="@color/white"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/blueJeans"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item1"
        android:padding="-1dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/second_cat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangle_background"
            android:padding="35dp"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangle_background"
            android:src="@drawable/add"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/addItem_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="22dp"
                android:paddingEnd="30dp"
                android:text="Add item 2"
                android:textSize="11sp" />


            <EditText
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addItem_text2"
                android:hint="Describe product"
                android:inputType="text"
                android:paddingStart="12dp"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Price"
                android:hint="Price"
                android:inputType="number"
                android:padding="12dp"
                android:paddingStart="35dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Price"
                android:inputType="number"
                android:padding="12dp"
                android:text="MK"
                android:textSize="13sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/blueJeans"
            android:text="view"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_below="@+id/item2">

        <ImageView
            android:id="@+id/third_cat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangle_background"
            android:padding="35dp"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/thirdImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectangle_background"
            android:src="@drawable/add"
            android:visibility="gone" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/addItem_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="22dp"
            android:paddingEnd="30dp"
            android:text="Add item 3"
            android:textSize="11sp" />

            <EditText
                android:layout_below="@+id/addItem_text3"
                android:id="@+id/describe_product2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:hint="Describe product"
                android:inputType="text"
                android:textSize="13sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/describe_product2"
                android:hint="Price"
                android:inputType="number"
                android:paddingStart="35dp"
                android:padding="12dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/describe_product2"
                android:text="MK"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="13sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/blueJeans"
            android:text="view"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
    </ScrollView>