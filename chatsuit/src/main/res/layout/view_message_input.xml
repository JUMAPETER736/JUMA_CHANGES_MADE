
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <ImageButton
        android:id="@+id/messageEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />
    <Button
        android:id="@id/gifButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIF"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/messageEmoji"
        android:layout_toRightOf="@id/messageEmoji"
        android:contentDescription="GIF" />



    <ImageButton
        android:id="@+id/voiceNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true" />

    <Space
        android:id="@id/attachmentButtonSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toEndOf="@id/messageEmoji"
        android:layout_toRightOf="@id/messageEmoji" />

    <com.vanniktech.emoji.EmojiEditText
        android:id="@id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/sendButtonSpace"
        android:layout_toLeftOf="@id/sendButtonSpace"
        android:layout_toEndOf="@id/attachmentButtonSpace"
        android:layout_toRightOf="@id/attachmentButtonSpace"
        android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences" />

    <Space
        android:id="@id/sendButtonSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toStartOf="@id/wrapper"
        android:layout_toLeftOf="@id/wrapper" />


    <FrameLayout
        android:id="@+id/wrapper"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content">

        <ImageButton
            android:id="@id/messageSendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@id/voiceMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/white" />


    </FrameLayout>

    <ImageButton
        android:id="@id/attachmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/wrapper"
        android:layout_centerVertical="true" />

</merge>