<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:windowSoftInputMode="adjustResize"
    tools:context=".User_Interface.fragments.feed.UploadFeedActivity">

    <!-- App Bar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bluejeans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="@string/back_icon"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/cancel_svgrepo_com"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_feed"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="More options"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:tint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Container -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="16dp"
        android:clickable="false"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Invisible clickable overlay -->
            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="true"
                android:background="@android:color/transparent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <!-- File Thumbnail Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/forUploadingFileThumbNail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <!-- Move mediaFileArea here to make it cover the entire CardView -->
                        <View
                            android:id="@+id/actualFileClicked"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:id="@+id/uploadedFileThumbNail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/content_description"
                            android:scaleType="centerCrop" />

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />

                        <!-- File Type Icon - Added to top left corner -->
                        <ImageView
                            android:id="@+id/fileTypeIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|start"
                            android:layout_margin="8dp"
                            android:padding="2dp"
                            android:visibility="visible"
                            android:contentDescription="@string/content_description"
                            android:backgroundTint="#80000000"
                            tools:src="@drawable/pdf_icon" />

                        <!-- Remove button - Added to top right corner -->
                        <ImageView
                            android:id="@+id/removeButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_delete_"
                            android:backgroundTint="#80000000"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/playButton"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:contentDescription="Play video or audio"
                            android:padding="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/baseline_play_arrow_24"
                            android:visibility="gone"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/pauseButton"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:contentDescription="Pause video or audio"
                            android:padding="20dp"
                            android:src="@drawable/baseline_pause_white_24"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"
                            app:tint="@color/white" />

                        <me.relex.circleindicator.CircleIndicator3
                            android:id="@+id/circleIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom"
                            android:background="#80000000"
                            android:visibility="visible" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- Select Cover Section -->
                <TextView
                    android:id="@+id/selectCoverText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/section_margin_top"
                    android:text="Select cover"
                    android:textColor="@color/blueJeanse"
                    android:textSize="@dimen/section_text_size"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/forUploadingFileThumbNail" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/cover_recyclerview_height"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selectCoverText" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/interactionsBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/bluejeans"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/saveChanges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/button_padding_horizontal"
                            android:text="Select Cover from Camera Roll"
                            android:textColor="@color/white"
                            android:textSize="@dimen/button_text_size" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Caption Input -->
                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_4"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_top_bottom_border"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Caption your content to make it interesting up to 4000 words..."
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:padding="4dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/interactionsBox" />

                <!-- Icon Layout Section -->
                <LinearLayout
                    android:id="@+id/iconLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText">

                    <LinearLayout
                        android:id="@+id/tagPeopleLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/icon_option_padding">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginBottom="@dimen/icon_margin_bottom"
                            android:src="@drawable/person_svgrepo_com" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tag people"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/topics_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/icon_option_padding">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginBottom="@dimen/icon_margin_bottom"
                            android:src="@drawable/topic2_svgrepo_com" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add topics"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/icon_option_padding">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginBottom="@dimen/icon_margin_bottom"
                            android:src="@drawable/location_svgrepo_com" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add location"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addMoreFeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/icon_option_padding">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginBottom="@dimen/icon_margin_bottom"
                            android:src="@drawable/baseline_add_24"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Add more"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/icon_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/draftButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/button_margin"
            android:background="@drawable/fill_button_color"
            android:minWidth="@dimen/button_min_width"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:text="Save Draft"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/postButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/button_margin"
            android:background="@drawable/fill_button_color"
            android:minWidth="@dimen/button_min_width"
            android:paddingHorizontal="@dimen/button_padding_horizontal"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Full Screen File Container - MOVED TO END SO IT OVERLAYS EVERYTHING -->
    <FrameLayout
        android:id="@+id/fullScreenFileContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:fitsSystemWindows="false"
        android:visibility="gone"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Full Screen ViewPager2 for swiping between files -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fullScreenViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- Full Screen Video View for videos -->
        <VideoView
            android:id="@+id/fullScreenFileView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Full Screen Image View for images, audio thumbnails, and document thumbnails -->
        <ImageView
            android:id="@+id/fullScreenAnyFileView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="Full screen image, audio thumbnail, or document thumbnail" />

        <!-- Full Screen Controls Overlay -->
        <RelativeLayout
            android:id="@+id/fullScreenControlsOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <!-- Close Full Screen Button -->
            <ImageView
                android:id="@+id/closeFullScreenButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Exit full screen"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/cancel_svgrepo_com"
                app:tint="@color/white" />

            <!-- Full Screen Play/Pause Button -->
            <ImageView
                android:id="@+id/fullScreenPlayPauseButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Play/Pause video or audio"
                android:focusable="true"
                android:padding="20dp"
                android:src="@drawable/baseline_play_arrow_24"
                android:visibility="gone"
                app:tint="@color/white" />

            <!-- SeekBar at the bottom -->
            <SeekBar
                android:id="@+id/bottomFeedVideoProgressSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="16dp"
                android:max="100"
                android:progress="0"
                android:minHeight="4dp"
                android:maxHeight="4dp"
                android:progressTint="@color/bluejeans"
                android:progressBackgroundTint="@color/dark_gray"
                android:thumb="@null"
                android:splitTrack="false"
                android:visibility="gone" />

            <!-- Video Duration Text -->
            <TextView
                android:id="@+id/videoDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:gravity="center_vertical"
                android:visibility="gone" />

            <!-- Circle Indicator for Full Screen ViewPager -->
            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/fullScreenIndicator"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:background="@android:color/transparent"
                android:visibility="visible" />

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>