<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="2dp"
    android:background="@color/surface_primary">

    <!-- Profile Image Container with Story Ring -->
    <FrameLayout
        android:id="@+id/profileImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Story Ring (optional) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/storyRing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="@color/blueJeans"
            app:strokeWidth="2dp"
            tools:visibility="visible" />

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/person_button_svgrepo_com"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="@color/blueJeans"
            app:strokeWidth="2dp" />

        <!-- Online Status Indicator -->
        <View
            android:id="@+id/onlineStatusIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ic_edit_text_bkg"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <!-- User Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <!-- Username with Verification Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Uy Scuti" />

            <ImageView
                android:id="@+id/verificationBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_verified"
                android:visibility="gone"
                app:tint="@color/blueJeans"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="\@uyscuti" />

        <!-- Mutual Connections -->
        <TextView
            android:id="@+id/mutualConnectionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            tools:text="Followed by 5 others"
            tools:visibility="visible" />

        <!-- Suggestion Container -->
        <LinearLayout
            android:id="@+id/suggestionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/suggestionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/blueJeans"
                android:textStyle="italic"
                tools:text="Suggested for you" />
        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Following Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="90dp"
            android:text="Message"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/blueJeans"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"
            app:strokeWidth="0dp" />

        <!-- More Options Menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/moreOptionsButton"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_more_vert"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/text_secondary"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:contentDescription="More options" />

    </LinearLayout>

</LinearLayout>