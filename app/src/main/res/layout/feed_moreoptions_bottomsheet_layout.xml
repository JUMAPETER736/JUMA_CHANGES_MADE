<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Make Favorite -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/makeFavoriteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/makeFavoriteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/favorite_black"
                android:contentDescription="Favorite"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/makeFavoriteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Make Favorite"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Download -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/downloadFeedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/downloadImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/download_minimalistic_svgrepo_com"
                android:contentDescription="Download"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Download"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Follow/Unfollow -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/followUnfollowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/downloadFeedLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/followUnfollowIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                android:contentDescription="Follow/Unfollow"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/followUnfollowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Unfollow"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Share -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shareFeedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/followUnfollowLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/shareFeedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share"
                android:contentDescription="Share"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Share"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Repost -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rePostFeedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/shareFeedLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/rePostFeedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/retweet_svgrepo_com"
                android:contentDescription="Repost"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Repost"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Not Interested -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notInterestedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/rePostFeedLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/notInterestedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_no_internet"
                android:contentDescription="Not Interested"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Not Interested"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Hide Post -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hidePostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/notInterestedLayout"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_marginStart="16dp"

            android:id="@+id/hidePostIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/common_google_signin_btn_icon_light"
            android:contentDescription="Hide Post"
            app:tint="@color/blueJeans" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Hide Post"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="See fewer posts like this"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Mute User -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/muteOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/hidePostLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/muteOptionIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/music_placeholder"
                android:contentDescription="Mute User"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/muteOptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mute User"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Report User -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reportOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/muteOptionLayout"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/reportOptionIcon"
            android:layout_width="24dp"
            android:layout_marginStart="16dp"
            android:layout_height="24dp"
            android:src="@drawable/profilepic2"
            android:contentDescription="Report User"
            app:tint="@color/blueJeans" />

        <LinearLayout
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="35dp">

            <TextView
                android:id="@+id/reportOptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Report User"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="We won't let this user know who reported this."
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Copy Link -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/copyLinkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/reportOptionLayout"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/gray_light"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/copyLinkIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_action_copy"
                android:contentDescription="Copy Link"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Copy Link"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>