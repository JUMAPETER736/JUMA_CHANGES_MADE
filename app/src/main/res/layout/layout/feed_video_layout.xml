    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/feedThumbnailCardView"
        app:layout_constraintLeft_toLeftOf="@+id/feedThumbnailCardView"
        app:layout_constraintRight_toRightOf="@+id/feedThumbnailCardView"
        app:layout_constraintBottom_toBottomOf="@+id/feedThumbnailCardView"
        android:id="@+id/feedVideoPlayImage"
        android:src="@drawable/play"
        android:visibility="gone"
