        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/like"
        app:layout_constraintLeft_toRightOf="@id/reFeed"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_share_24"
        android:id="@+id/share"
        app:tint="@color/blueJeans"
        />

