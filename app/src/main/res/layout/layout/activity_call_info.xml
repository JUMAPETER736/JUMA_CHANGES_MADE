<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:background="@color/bluejeans" />

    <ImageView
            android:id="@+id/callerAvatar"
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_person_24"
            android:layout_height="120dp"/>

    <TextView
        android:id="@+id/callerName"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/callerAvatar"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/actions"
        android:layout_below="@id/callerName"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/messageCaller"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_centerHorizontal="true"
            app:tint="@color/bluejeans"
            android:layout_marginEnd="18dp"
            android:src="@drawable/chat_round_svgrepo_com"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/voiceCallCaller"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="18dp"
            android:padding="4dp"
            app:tint="@color/bluejeans"
            android:src="@drawable/baseline_phone_24"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/messageCaller" />

        <ImageView
            android:id="@+id/videoCallCaller"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/bluejeans"
            android:padding="4dp"
            android:src="@drawable/video_call_img"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/voiceCallCaller" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:layout_marginTop="5dp"
        android:layout_below="@id/actions"
        android:background="@color/white_three"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/callDate"
        android:layout_below="@id/divider"
        android:textSize="18sp"
        android:textColor="@color/gray_dark_transparent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/callDetails"
        android:layout_below="@id/callDate"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/callType"
            android:layout_margin="8dp"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_call_received_24"
            android:layout_height="30dp"
            app:tint="@color/green_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/callState"
                android:text="Incoming"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/callCreatedAt"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:text="11:11"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/callDuration"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>

