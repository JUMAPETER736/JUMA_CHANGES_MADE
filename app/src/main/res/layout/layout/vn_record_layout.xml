<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/VNLayout"
        android:visibility="visible"
        >
        <!--        android:background="#808080"-->


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="18dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/VNLinearLayout"
                android:background="@drawable/rounded_corners_vn"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginTop="3dp"
                    android:textSize="16sp"
                    android:id="@+id/timerTv"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/playerTimerTv"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:gravity="start"
                        android:layout_marginStart="20dp"
                        android:visibility="visible"
                        android:layout_marginTop="3dp"
                        android:textSize="16sp"
                        android:id="@+id/secondTimerTv"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:gravity="end"
                        android:layout_marginEnd="20dp"
                        android:visibility="visible"
                        android:layout_marginTop="3dp"
                        android:textSize="16sp"
                        android:id="@+id/thirdTimerTv"
                        />

                </LinearLayout>

                <com.uyscut.flashdesign.views.WaveFormView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/waveForm"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/playAudioLayout"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        android:id="@+id/playVnAudioBtn"
                        android:background="@drawable/ic_ripple"
                        android:padding="10dp"
                        android:src="@drawable/play_svgrepo_com"
                        app:tint="@color/white"

                        />

                    <com.uyscut.flashdesign.utils.waveformseekbar.WaveformSeekBar
                        android:id="@+id/wave"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:marker_color="@color/fade"
                        android:layout_margin="16dp"
                        app:marker_text_padding="2dp"
                        app:marker_text_size="12dp"
                        app:marker_width="1dp"
                        app:wave_background_color="@color/gray_dark"
                        app:wave_corner_radius="2dp"
                        app:wave_gap="1.5dp"
                        app:wave_gravity="center"
                        app:wave_max_progress="100"
                        app:wave_min_height="3dp"
                        app:wave_progress="0"
                        app:wave_progress_color="@color/bluejeans"
                        app:wave_width="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/deleteVN"
                        android:src="@drawable/times_svgrepo_com__1_exit"
                        app:tint="@color/white"
                        android:background="@drawable/ic_ripple"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_mic_on"
                        android:padding="10dp"
                        app:tint="@color/white"
                        android:id="@+id/recordVN"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="80dp"
                        android:background="@drawable/ic_ripple"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/send_svgrepo_com__1_"
                        app:tint="@color/white"
                        android:id="@+id/sendVN"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_ripple_disabled"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>