<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/feedTextLayoutContainer"
    xmlns:expandableTextView="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/feedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Header Section: Profile Image, Username, Handler, Follow Button, Options -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/document"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/profileImageView" />

            <TextView
                android:id="@+id/handerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contentCreator"
                android:textColor="@color/gray_darkest"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/textView" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Date - Time"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintEnd_toStartOf="@+id/followButton"
                app:layout_constraintHorizontal_bias="0.828"
                app:layout_constraintStart_toEndOf="@id/textView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/feed_follow_button_border"
                android:backgroundTintMode="@color/blueJeans"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/profileImageView"
                app:layout_constraintEnd_toStartOf="@id/moreOptions"
                app:layout_constraintTop_toTopOf="@id/profileImageView" />

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/options_vertical_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/followButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/followButton"
                android:layout_marginEnd="8dp"
                app:tint="@color/blueJeans" />

            <!-- Content Section: Caption and Tags -->
            <com.colormoon.readmoretextview.ReadMoreTextView
                android:id="@+id/caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:justificationMode="inter_word"
                android:text="This is Expandable text this is a simple text, this is a testing text"
                android:textSize="16sp"
                app:colorClickableText="#039BE5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImageView"
                app:trimCollapsedText="@string/read_more"
                app:trimExpandedText=""
                android:maxLines="5"
                app:trimMode="trimModeLength" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:text="#SocialApp#Developerws#MalawiFire"
                android:textColor="@color/blueJeans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caption" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="#E1E8ED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tags" />

            <!-- Action Section: Like, Comment, Favorite, Repost, Share -->
            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <!-- Like Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/heart_svgrepo_com"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/likesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/comments"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/feedCommentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Favorite Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/favorite_svgrepo_com__1_"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/favoriteCounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Repost Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reFeed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/repeat_svgrepo_com"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/repostCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Share Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/share_svgrepo_com"
                        app:tint="@color/blueJeans" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="#E1E8ED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionsLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>