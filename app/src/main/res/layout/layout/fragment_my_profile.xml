    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/bluejeans"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/bluejeans">
            <!--        <com.google.android.material.tabs.TabLayout-->
            <!--            android:id="@+id/tab_layout"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="40dp"-->
            <!--            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"-->
            <!--            app:tabGravity="fill"-->
            <!--            app:tabIndicatorColor="@color/bluejeans"-->
            <!--            app:tabIndicatorFullWidth="false"-->
            <!--            app:tabMode="fixed"-->
            <!--            app:tabIndicator="@color/bluejeans"-->
            <!--            app:itemActiveIndicatorStyle="@style/ProfileTab.Custom.Indicator"-->
            <!--            app:tabSelectedTextColor="@color/bluejeans">-->
            <!--            app:tabBackground="@drawable/profile_tab_selector"-->
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_below="@id/tab_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>