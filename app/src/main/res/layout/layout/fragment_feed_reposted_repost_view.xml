<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layoutDescription="@xml/fragment_feed_video_view_scene"
    tools:context=".ui.fragments.feed.feedviewfragments.FeedMixedFilesViewFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/feed_view_custom" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_frame"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caption"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="10dp"
        tools:text="bnfuiwdhbfonsdonvfsodncvosnmodncondeo"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blueJeans"
        tools:text="tag1"
        app:layout_constraintTop_toBottomOf="@+id/caption" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/multipleImagesContainer"
        android:visibility="visible"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/tags"
        app:layout_constraintBottom_toTopOf="@+id/clickContainer"
        android:layout_marginTop="10dp"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/viewPager"
            app:layout_constraintBottom_toTopOf="@+id/circleIndicator"
            />

        <me.relex.circleindicator.CircleIndicator3
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/circleIndicator"
            android:background="@color/gray_dark_transparent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clickContainer"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/like"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/content_description"
            android:padding="10dp"
            android:src="@drawable/like_svgrepo_com_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:tint="@color/blueJeans" />

        <TextView
            android:id="@+id/likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="0"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/like"
            app:layout_constraintRight_toRightOf="@id/like"
            app:layout_constraintTop_toBottomOf="@+id/like" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/content_description"
            android:padding="10dp"
            android:src="@drawable/chat_round_svgrepo_com_shorts"
            app:layout_constraintBottom_toBottomOf="@id/like"
            app:layout_constraintLeft_toRightOf="@id/like"
            app:tint="@color/blueJeans" />

        <TextView
            android:id="@+id/feedCommentsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="0"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/comment"
            app:layout_constraintRight_toRightOf="@id/comment"
            app:layout_constraintTop_toBottomOf="@+id/comment" />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/content_description"
            android:padding="10dp"
            android:src="@drawable/favorite_svgrepo_com__1_"
            app:layout_constraintBottom_toBottomOf="@id/like"
            app:layout_constraintLeft_toRightOf="@id/comment"
            app:tint="@color/blueJeans" />
        <TextView
            android:id="@+id/favCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintLeft_toLeftOf="@+id/fav"
            app:layout_constraintRight_toRightOf="@+id/fav"
            app:layout_constraintTop_toBottomOf="@+id/fav" />

        <ImageView
            android:id="@+id/re"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:src="@drawable/retweet_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/fav"
            app:layout_constraintLeft_toRightOf="@id/fav"

            app:tint="@color/blueJeans" />
        <TextView
            android:id="@+id/retweetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintLeft_toLeftOf="@+id/re"
            app:layout_constraintRight_toRightOf="@+id/re"
            app:layout_constraintTop_toBottomOf="@+id/re" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/content_description"
            android:padding="10dp"
            android:src="@drawable/baseline_share_24"
            app:layout_constraintBottom_toBottomOf="@id/re"
            app:layout_constraintLeft_toRightOf="@id/re"
            app:tint="@color/blueJeans" />

        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/content_description"
            android:padding="10dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/share"
            app:layout_constraintLeft_toRightOf="@id/share"
            app:tint="@color/blueJeans" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>