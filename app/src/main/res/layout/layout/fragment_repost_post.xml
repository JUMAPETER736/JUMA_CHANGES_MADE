                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"

                            android:text="#GreatApp #MustTry #Appreciation"
                            android:textColor="@color/blueJeans"
                            android:textSize="12sp" />
