<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedMixedFilesContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:layout_marginTop="10dp">
    <!-- Main Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainPostCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header section -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/document"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/profileImageView" />

            <TextView

                android:id="@+id/handerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/contentCreator"
                android:textColor="@color/gray_darkest"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/textView" />
            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="date_time"
                android:textSize="12sp"
                android:textColor="@color/gray_darkest"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintEnd_toStartOf="@id/followButton" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/fill_button_color"
                android:paddingHorizontal="12dp"
                android:text="Following"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/profileImageView"
                app:layout_constraintEnd_toStartOf="@id/moreOptions"
                app:layout_constraintTop_toTopOf="@id/profileImageView" />

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:src="@drawable/options_vertical_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/followButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/followButton"
                app:tint="@color/blueJeans" />
            <!-- Caption section with improved text display -->
            <com.colormoon.readmoretextview.ReadMoreTextView
                android:id="@+id/caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:justificationMode="inter_word"
                android:text="This is Expandable text this is a simple text, this is a testing text"
                android:textSize="16sp"
                app:colorClickableText="#039BE5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImageView"
                app:trimCollapsedText="@string/read_more"
                app:trimExpandedText="@string/read_less"
                app:trimLength="100"
                app:trimMode="trimModeLength" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="#SocialApp #Developers #MalawiFire"
                android:textColor="@color/blueJeans"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caption"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Media card positioned between main card and interaction buttons -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mixedFilesCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:background="@color/gray_dark"
        app:layout_constraintTop_toBottomOf="@id/mainPostCard">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/multipleAudiosContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:adjustViewBounds="true"
            android:clickable="false">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:background="@color/gray_dark"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Interaction buttons now positioned BELOW the mixed files card -->

    <LinearLayout
        android:id="@+id/interactionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center"
        android:elevation="4dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/mixedFilesCardView">
        <!-- Like Section -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/heart_svgrepo_com"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Comment Section -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/comments"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/feedCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Favorite Section -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/favorite_svgrepo_com__1_"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/favoriteCounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Retweet Section -->
        <LinearLayout
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reFeed"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/repeat_svgrepo_com"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/repostCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Share Section -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/share_svgrepo_com"
                app:tint="@color/blueJeans" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_transparent"
        app:layout_constraintTop_toBottomOf="@id/interactionButtonsLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>