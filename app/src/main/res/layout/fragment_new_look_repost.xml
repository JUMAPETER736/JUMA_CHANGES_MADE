<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="3dp"
        android:text="Upload File"
        android:id="@+id/content"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortVideoThumbNail"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/feedVideoParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/fragment_new_look_repost_scene">

        <!-- Toolbar with Twitter-style -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/Toolbar_of_retweet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/baseline_arrow_back_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Repost"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/draftButton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Drafts"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:id="@+id/composeSectionContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:id="@+id/composeSection"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/userprofile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop" />


                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="Add a comment..."
                        android:minHeight="48dp"
                        android:paddingTop="8dp"
                        android:textColorHint="#657786"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView

                    android:id="@+id/shortVideoThumbNail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/shortThumbNail"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="40dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:srcCompat="@drawable/attach_svgrepo_com" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/multipleImagesContainers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:visibility="visible">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.114" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagers2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="@+id/circleIndicator" />

                        <me.relex.circleindicator.CircleIndicator3
                            android:id="@+id/circleIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/visibilityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/globe"
                    android:drawablePadding="8dp"
                    android:text="Everyone can reply"
                    android:textColor="#657786"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:background="#E1E8ED" />
            </LinearLayout>

            <!-- Quoted Tweet Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quotedTweetContainer"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/composeSection"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#F7F9FA"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/multipleImagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:visibility="visible">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="NotSibling" />

                    <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/circleIndicators"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/documentImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/documents"
                        android:visibility="gone"
                        app:layout_constraintDimensionRatio="16:9"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="0dp" />

                    <ImageView
                        android:id="@+id/artworkImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/content_description"
                        android:scaleType="centerCrop"
                        android:src="@drawable/music_placeholder"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/artworkImageView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/leftAudioDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/duration" />

                            <TextView
                                android:id="@+id/audioDuration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:padding="10dp"
                                android:text="@string/duration" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/playPauseButton"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/content_description"
                                android:padding="10dp"
                                android:src="@drawable/play_svgrepo_com" />

                            <SeekBar
                                android:id="@+id/seekBar"
                                style="@style/SeekBarNoThumb"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:padding="10dp"
                                android:progress="0"
                                android:progressTint="@color/bluejeans" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!-- Original Tweet Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/originalPostProfileImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/originalPostUsername"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="originalPostUsername"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/verifiedBadge"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="4dp"
                                    android:src="@drawable/verified"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/originalPostHandle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="\@originalHandle"
                                    android:textColor="#657786"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/postTimeIndicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="Â· 2h"
                                    android:textColor="#657786"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/originalFeedTextContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="original post content will be added here"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Media Container -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/mixedFilesCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:clickable="true"
                        android:visibility="visible"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/tags">

                        <ImageView
                            android:id="@+id/originalFeedImage"
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            android:contentDescription="originalPost"
                            android:src="@drawable/imageplaceholder"
                            android:visibility="invisible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.114" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nestedOriginalPostLinkContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/blueJeans"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp">

                        <!-- Link Preview Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/nested_user_profile"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/round_user"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/nestedOriginalPostHandle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="nested_user"
                                android:textColor="#657786"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/nestedOriginalPostUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nested_user"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <!-- Link Preview Snippet -->
                        <TextView
                            android:id="@+id/nestedOriginalPostSnippet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="90dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="This is a preview of ..."
                            android:textColor="#14171A"
                            android:textSize="14sp" />
                    </androidx.cardview.widget.CardView>

                    <!-- Interaction Metrics -->
                    <LinearLayout
                        android:id="@+id/interactionMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/commentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="543"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comments"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/repostCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="2.1K"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Reposts"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/likesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="15.4K"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Likes"
                            android:textColor="#657786"
                            android:textSize="14sp" />

                    </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <!-- Bottom Action Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E8ED"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/mediaOptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/shortThumbNails"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/image"
                    app:tint="#1DA1F2" />

                <ImageView
                    android:id="@+id/attachGif"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/gif"
                    app:tint="#1DA1F2" />

                <ImageView
                    android:id="@+id/attachPoll"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/poll"
                    app:tint="#1DA1F2" />

                <ImageView
                    android:id="@+id/subTopicstwo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/emoji"
                    app:tint="#1DA1F2" />

                <ImageView
                    android:id="@+id/schedulePost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/schedule"
                    app:tint="#1DA1F2" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addMoreFeed"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="30dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/shortVideoThumbNail"
                    app:layout_constraintStart_toEndOf="@id/shortVideoThumbNail"
                    app:layout_constraintTop_toTopOf="@id/shortVideoThumbNail">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/baseline_add_24"
                        app:tint="@color/blueJeans" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <Button
                android:id="@+id/postButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_info_blue"
                android:paddingHorizontal="16dp"
                android:text="Repost"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</LinearLayout>