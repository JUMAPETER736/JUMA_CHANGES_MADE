<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3F3"
    tools:context=".User_Interface.OtherUserProfile.OtherUserProfileAccount">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar with collapsing toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F3F3"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F3F3"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@id/toolbar">

                <!-- Profile Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F6F3F3"
                    android:paddingTop="?attr/actionBarSize"
                    android:paddingBottom="10dp"
                    app:layout_collapseMode="parallax">



                    <!-- Profile Avatar Section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="14dp">

                        <!-- Profile Avatar with animated border -->
                        <FrameLayout
                            android:id="@+id/avatarFrame"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_centerHorizontal="true">

                            <!-- Animated ring for stories/highlights -->
                            <ImageView
                                android:id="@+id/storyRing"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/story_ring_gradient"
                                android:visibility="visible" />

                            <!-- Profile Avatar -->
                            <ImageView
                                android:id="@+id/userProfileAvatar"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:src="@drawable/person_button_svgrepo_com"
                                android:background="@drawable/circle_background"
                                android:elevation="2dp" />

                            <!-- Live indicator dot -->
                            <View
                                android:id="@+id/liveIndicator"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background"
                                android:backgroundTint="#FF3333"
                                android:visibility="gone" />

                            <!-- Add Friend Icon - TikTok style overlapping bottom-right -->
                            <ImageView
                                android:id="@+id/addFriendIcon"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom|end"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/circle_background"
                                android:backgroundTint="#2196F3"
                                android:src="@drawable/add"
                                android:padding="6dp"
                                app:tint="@android:color/white"
                                android:elevation="8dp" />

                        </FrameLayout>

                    </RelativeLayout>

                    <!-- Profile Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <!-- Full Name with Edit Icon -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uy Scuti"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/editProfileButton"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_edit"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="2dp"
                                app:tint="#666666"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <!-- Username with Verification and Creator badges on same line -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="\@uyscuti"
                                android:textColor="#666666"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <!-- Verification badge -->
                            <ImageView
                                android:id="@+id/verificationBadge"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_verified"
                                android:visibility="visible"
                                app:tint="#2196F3" />

                            <!-- Creator badge -->
                            <ImageView
                                android:id="@+id/creatorBadge"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/favorite_star_achievement_svgrepo_com"
                                android:visibility="visible"
                                app:tint="#2196F3" />

                        </LinearLayout>

                        <!-- Account Type Badge -->
                        <LinearLayout
                            android:id="@+id/accountTypeBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/account_type_badge_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business account"
                                android:textColor="#666666"
                                android:textSize="11sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <!-- Trending Status -->
                        <LinearLayout
                            android:id="@+id/trendingStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/trending_badge_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_trending_up"
                                app:tint="#FDFBFB" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Trending Creator"
                                android:textColor="#F8F7F7"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Enhanced User Stats with animations -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Following -->
                            <LinearLayout
                                android:id="@+id/followingSection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="?attr/selectableItemBackground"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/followingCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="501"
                                    android:textColor="#000000"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Following"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <!-- Followers with growth indicator -->
                            <LinearLayout
                                android:id="@+id/followersSection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="?attr/selectableItemBackground"
                                android:padding="12dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/followersCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12.5K"
                                        android:textColor="#000000"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <!-- Growth indicator -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:background="@drawable/growth_indicator_bg"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:paddingHorizontal="4dp"
                                        android:paddingVertical="2dp">

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:src="@drawable/baseline_arrow_upward_24"
                                            app:tint="#00C853" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="2.3K"
                                            android:textColor="#00C853"
                                            android:textSize="9sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Followers"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <!-- Likes -->
                            <LinearLayout
                                android:id="@+id/likesSection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="?attr/selectableItemBackground"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/postsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="89.2K"
                                    android:textColor="#000000"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Likes"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Join Date and Location -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#666666" />

                            <TextView
                                android:id="@+id/dateJoined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Joined 25/12/2025"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="â€¢"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_location"
                                app:tint="#666666" />

                            <TextView
                                android:id="@+id/userActualLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Lilongwe, Malawi"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <!-- Enhanced Bio Section with hashtags -->
                        <TextView
                            android:id="@+id/userBioText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:text="âœ¨ Content Creator | Dancer âœ¨\nðŸŽµ Music Lover | Viral Videos\n#Dance #Comedy #Viral #TrendingNow"
                            android:textColor="#333333"
                            android:textSize="15sp"
                            android:autoLink="web" />

                        <!-- Multiple Link Options -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/linkInBio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ”— linktr.ee/uyscuti"
                                android:gravity="center"
                                android:textColor="#2196F3"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp" />

                            <ImageView
                                android:id="@+id/copyLinkButton"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_action_copy"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="4dp"
                                app:tint="#2196F3" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mutualConnectionsSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followed by "
                                android:textColor="#666666"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sarah_dance, mike_music"
                                android:textColor="#000000"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" and 5 others you follow"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <!-- TikTok Shop Badge (if applicable) -->
                        <LinearLayout
                            android:id="@+id/tiktokShopBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/shop_badge_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_shop"
                                app:tint="#2196F3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="TikTok Shop"
                                android:textColor="#2196F3"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Hidden compatibility fields -->
                        <TextView
                            android:id="@+id/date_birth"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="visible"
                            android:text="birthday/09/2009" />

                        <TextView
                            android:id="@+id/created_date"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="visible"
                            android:text="created 09/02/2023" />

                        <!-- Enhanced Action Buttons -->
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/followIcon"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp"
                                android:text="Follow"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                app:backgroundTint="#2196F3"
                                app:cornerRadius="4dp"
                                app:icon="@drawable/baseline_add_24"
                                app:iconTint="@android:color/white"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                android:elevation="0dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp" />

                            <!-- Message Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/action_message"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="8dp"
                                app:backgroundTint="#FFFFFF"
                                app:strokeColor="#E1E1E1"
                                app:strokeWidth="1dp"
                                app:cornerRadius="4dp"
                                app:icon="@drawable/comment_1_svgrepo_com"
                                app:iconTint="#000000"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:elevation="0dp" />

                            <!-- YouTube Button (Cross-platform link) -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/youtubeButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="8dp"
                                app:backgroundTint="#FFFFFF"
                                app:strokeColor="#E1E1E1"
                                app:strokeWidth="1dp"
                                app:cornerRadius="4dp"
                                app:icon="@drawable/ic_youtube"
                                app:iconTint="#FF0000"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:elevation="0dp" />

                            <!-- Instagram Button (Cross-platform link) -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/instagramButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="8dp"
                                app:backgroundTint="#FFFFFF"
                                app:strokeColor="#E1E1E1"
                                app:strokeWidth="1dp"
                                app:cornerRadius="4dp"
                                app:icon="@drawable/ic_instagram_2"
                                app:iconTint="#E4405F"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:elevation="0dp" />

                            <!-- Options Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/callButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:backgroundTint="#FFFFFF"
                                app:strokeColor="#E1E1E1"
                                app:strokeWidth="1dp"
                                app:cornerRadius="4dp"
                                app:icon="@drawable/options_vertical_svgrepo_com"
                                app:iconTint="#000000"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:elevation="0dp" />
                        </LinearLayout>

                        <!-- Creator Analytics Preview -->
                        <LinearLayout
                            android:id="@+id/analyticsPreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/analystics"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.1M"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profile views"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+12% this week"
                                    android:textColor="#00C853"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#E0E0E0" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45.7K"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Video views"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+28% this week"
                                    android:textColor="#00C853"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <!-- Custom Toolbar -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:contentInsetStart="0dp"
                    app:contentInsetEnd="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp">

                        <!-- Back button -->
                        <ImageView
                            android:id="@+id/backButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_close_24"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#2196F3" />

                        <!-- Username in toolbar -->
                        <TextView
                            android:id="@+id/toolbarUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="\@uyscuti"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <!-- Share button -->
                        <ImageView
                            android:id="@+id/shareProfileButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:padding="4dp"
                            android:src="@drawable/share_svgrepo_com"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#2196F3" />

                        <!-- QR Code button -->
                        <ImageView
                            android:id="@+id/qrCodeButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:padding="4dp"
                            android:src="@drawable/baseline_qr_code_scanner_24"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#2196F3" />

                        <!-- More options -->
                        <ImageView
                            android:id="@+id/moreOptionsButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="4dp"
                            android:src="@drawable/options_vertical_svgrepo_com"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#2196F3" />

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>




        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F3F3">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#2196F3"
                    app:tabSelectedTextColor="#0F0303"
                    app:tabIndicatorColor="#F8F5F5"
                    app:tabIndicatorHeight="3dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabMaxWidth="0dp"
                    app:tabIndicatorFullWidth="false"
                    app:tabIconTint="@color/tab_icon_tint_selector"
                    app:tabIconTintMode="src_in">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/scroll_text_line_svgrepo_com"
                        android:visibility="visible" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/play_svgrepo_com_white" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/favorite_black" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/business_bag_svgrepo_com" />

                </com.google.android.material.tabs.TabLayout>



                <!-- ViewPager for Content -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tab_layout"
                    android:layout_marginTop="0dp" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Type a message..."
            android:inputType="text"
            android:visibility="gone"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>