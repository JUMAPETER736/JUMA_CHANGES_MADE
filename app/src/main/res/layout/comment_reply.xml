<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal"
    android:padding="0dp">

    <!-- Profile Picture (smaller for replies) -->
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/person_button_svgrepo_com"
        tools:ignore="MissingClass" />

    <!-- Reply Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Reply Bubble - FIXED: Changed from match_parent to wrap_content -->
        <LinearLayout
            android:id="@+id/replyBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_bubble_background"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:minWidth="80dp">

            <!-- Username -->
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane Smith"
                android:textColor="#1C1E21"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Reply Content -->
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                android:text="\@John Doe Great point! I totally agree with what you're saying here."
                android:textColor="#1C1E21"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Reply Actions Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time -->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <!-- Like Button -->
            <TextView
                android:id="@+id/likeUnLikeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="Like"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Reply Button -->
            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="Reply"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Like Count (shown when likes > 0) -->
            <LinearLayout
                android:id="@+id/likeCountContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/like_thumbs_up_svgrepo_com" />

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="5"
                    android:textColor="#65676B"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Nested Replies (replies to replies) - Usually limited to 1-2 levels -->
        <LinearLayout
            android:id="@+id/nestedRepliesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- View more nested replies -->
            <LinearLayout
                android:id="@+id/viewNestedRepliesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:visibility="gone">

                <View
                    android:layout_width="16dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:background="#65676B" />

                <TextView
                    android:id="@+id/viewNestedRepliesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View 2 more replies"
                    android:textColor="#65676B"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Nested reply item (typically just one level deep) -->
            <LinearLayout
                android:id="@+id/nestedReplyItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/nestedProfilePic"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/person_button_svgrepo_com"
                    tools:ignore="MissingClass" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- FIXED: Changed from match_parent to wrap_content for nested bubble -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/comment_bubble_background"
                        android:orientation="vertical"
                        android:paddingStart="2dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="6dp"
                        android:minWidth="80dp">

                        <TextView
                            android:id="@+id/nestedUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mike Johnson"
                            android:textColor="#1C1E21"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/nestedContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:lineSpacingExtra="2dp"
                            android:text="\@Jane Smith Exactly!"
                            android:textColor="#1C1E21"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/nestedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30m"
                            android:textColor="#65676B"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/nestedLikeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingStart="6dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="4dp"
                            android:text="Like"
                            android:textColor="#65676B"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>