<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    android:padding="0dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/person_button_svgrepo_com" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Comment Bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_bubble_background"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:minWidth="80dp">

            <!-- Username -->
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="#1C1E21"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Comment Text -->
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                android:text="Username"
                android:textColor="#1C1E21"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:visibility="visible" />

            <!-- Document Content - Moved inside bubble -->
            <RelativeLayout
                android:id="@+id/documentLayout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/documentImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/documents" />

                <TextView
                    android:id="@+id/docTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="File name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/docInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="Number of Pages"
                    android:textColor="#B1ADAD"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />
            </RelativeLayout>

        </LinearLayout>

        <!-- Like Count Container (Facebook style - shows count only when > 0) -->
        <LinearLayout
            android:id="@+id/likeCountContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp">

                <!-- Like Icon (left side, bottom layer) -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/like_thumbs_up_svgrepo_com" />

                <!-- Love Icon (right side, top layer overlapping) -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/red_like_heart_svgrepo_com_white" />

            </FrameLayout>

            <!-- Like Count -->
            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Action Buttons Container (Time, Like, Reply) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Time -->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1d"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

            <!-- Like Button -->
            <TextView
                android:id="@+id/likeUnLikeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="Like"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Reply Button -->
            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="Reply"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- View More Replies -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/viewRepliesContainer">

            <TextView
                android:id="@+id/commentReplies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:text="View more replies"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#65676B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/hideCommentReplies"
                android:text="Hide replies"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Replies RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/repliesRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</LinearLayout>