<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient colors -->
    <gradient
        android:startColor="#FF6F00"
        android:endColor="#FFB74D"
        android:angle="270" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#FF8C00" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
