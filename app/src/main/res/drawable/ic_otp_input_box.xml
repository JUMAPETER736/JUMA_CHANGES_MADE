<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:color="#000000"
        android:width="3dp" /> <!-- Reduced border width -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" /> <!-- Rounded corners -->

    <!-- Focused Border Color (using a state selector) -->
    <solid android:color="@android:color/white"/> <!-- Default color is white for non-focused state -->
    <stroke
        android:color="#080809"
        android:width="2dp" /> <!-- Reduced border width -->
</shape>
