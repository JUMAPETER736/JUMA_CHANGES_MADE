    private fun updateSeekBar() {
//        Log.d(TAG, "updateSeekBar: ")
        player?.let { player ->
            if (!isUserSeeking) {
                val currentPosition = player.currentPosition.toInt()
                seekBar?.progress = currentPosition
            }
        }
    }

