<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".User_Interface.OtherUserProfile.UserFollowingFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blueJeans"
        android:elevation="4dp"
        app:navigationIcon="@drawable/baseline_black_arrow_back_24">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Following" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/surface_primary"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/text_secondary"
            app:boxBackgroundColor="@color/background_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search following..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/clearSearchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear"
            android:contentDescription="Clear search"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Content Container with SwipeRefreshLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- RecyclerView for Following List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Sample Item Layout Structure (for reference) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sampleItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Profile Image Container with Enhanced Styling -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileImageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <!-- Profile Image Shadow -->
                    <View
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        app:layout_constraintStart_toStartOf="@id/profile_image"
                        app:layout_constraintTop_toTopOf="@id/profile_image" />

                    <!-- Profile Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_button_svgrepo_com"
                        android:elevation="4dp"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="3dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Story Ring with Gradient -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/storyRing"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/story_ring_gradient"
                        android:visibility="gone"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:layout_constraintStart_toStartOf="@id/profile_image"
                        app:layout_constraintTop_toTopOf="@id/profile_image"
                        app:layout_constraintEnd_toEndOf="@id/profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/profile_image"
                        tools:visibility="visible" />

                    <!-- Enhanced Online Status Indicator -->
                    <View
                        android:id="@+id/onlineStatusIndicator"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:elevation="6dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@id/profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/profile_image"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="1.0"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Username with Verification Badge -->
                <LinearLayout
                    android:id="@+id/usernameContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                    app:layout_constraintTop_toTopOf="@id/profileImageContainer"
                    app:layout_constraintEnd_toStartOf="@id/followButton">

                    <TextView
                        android:id="@+id/usernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1C1C1E"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="\@username" />

                    <!-- Verification Badge -->
                    <ImageView
                        android:id="@+id/verificationBadge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_verified"
                        android:visibility="gone"
                        app:tint="@color/verification_blue"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Full Name with Better Typography -->
                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6D6D80"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                    app:layout_constraintTop_toBottomOf="@id/usernameContainer"
                    app:layout_constraintEnd_toStartOf="@id/followButton"
                    tools:text="Full Name" />

                <!-- Enhanced Suggestion Container -->
                <LinearLayout
                    android:id="@+id/suggestionContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:padding="1dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                    app:layout_constraintTop_toBottomOf="@id/full_name"
                    app:layout_constraintEnd_toStartOf="@id/followButton"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_edit_text_bkg"
                        app:tint="#007AFF"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/suggestionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#007AFF"
                        android:textStyle="bold"
                        tools:text="Suggested for you" />

                </LinearLayout>

                <!-- Mutual Connections with Enhanced Styling -->
                <TextView
                    android:id="@+id/mutualConnectionsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#8E8E93"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                    app:layout_constraintTop_toBottomOf="@id/suggestionContainer"
                    app:layout_constraintEnd_toStartOf="@id/followButton"
                    tools:text="Followed by username + 12 others"
                    tools:visibility="visible" />

                <!-- Enhanced Follow Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/followButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="80dp"
                    android:text="Following"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:paddingHorizontal="20dp"
                    android:elevation="2dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="#007AFF"
                    android:textColor="#FFFFFF"
                    app:strokeWidth="0dp"
                    app:layout_constraintEnd_toStartOf="@id/moreOptionsButton"
                    app:layout_constraintTop_toTopOf="@id/profileImageContainer"
                    app:layout_constraintBottom_toBottomOf="@id/profileImageContainer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreOptionsButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_more_vert"
                    app:iconSize="20dp"
                    app:iconTint="#2196F3"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:contentDescription="More options"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:rippleColor="#E0E0E0"
                    style="@style/Widget.Material3.Button.TextButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profileImageContainer"
                    app:layout_constraintBottom_toBottomOf="@id/profileImageContainer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Empty State Layout -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_people_outline"
                    android:alpha="0.6"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No following found"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Start following people to see them here"
                    android:textSize="14sp"
                    android:textColor="@color/text_tertiary"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>