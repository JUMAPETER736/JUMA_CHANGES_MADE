<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/feedVideoParentLayout"
    app:layoutDescription="@xml/fragment_feed_video_view_scene"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_Interface.fragments.feed.feedviewfragments.FeedTextViewFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/feed_view_custom" />
    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/feedTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:contentDescription="@string/content_description"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="usubjksbvkjsdfbvdfkvjndjbfikdsbvksdbvjbsdfjkvbdfjigviufbniavk;hriohafr"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeButtonIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/heart_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="@color/blueJeans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/likeButtonIcon"
                app:layout_constraintLeft_toLeftOf="@id/likeButtonIcon"
                app:layout_constraintRight_toRightOf="@id/likeButtonIcon"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/likesCount"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentButtonIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/comments"
                app:layout_constraintBottom_toBottomOf="@id/likeButtonIcon"
                app:layout_constraintLeft_toRightOf="@id/likeButtonIcon"
                app:tint="@color/blueJeans" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/commentButtonIcon"
                app:layout_constraintLeft_toLeftOf="@id/commentButtonIcon"
                app:layout_constraintRight_toRightOf="@id/commentButtonIcon"
                android:text="0"
                android:id="@+id/feedCommentsCount"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/favoriteSection"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/content_description"
            android:padding="15dp"
            android:src="@drawable/favorite_svgrepo_com__1_"
            app:layout_constraintBottom_toBottomOf="@id/likeButtonIcon"
            app:layout_constraintLeft_toRightOf="@id/commentButtonIcon"
            app:tint="@color/blueJeans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/re"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:src="@drawable/repeat_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/favoriteSection"
            app:layout_constraintLeft_toRightOf="@id/favoriteSection"
            app:tint="@color/blueJeans" />
        <TextView
            android:id="@+id/retweetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/re"
            app:layout_constraintRight_toRightOf="@+id/re"
            app:layout_constraintTop_toBottomOf="@+id/re" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/shareButtonIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/content_description"
            android:padding="15dp"
            android:src="@drawable/share_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/re"
            app:layout_constraintLeft_toRightOf="@id/re"
            app:tint="@color/blueJeans" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/content_description"
            android:padding="15dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/shareButtonIcon"
            app:layout_constraintLeft_toRightOf="@id/shareButtonIcon"
            app:tint="@color/blueJeans" />
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>