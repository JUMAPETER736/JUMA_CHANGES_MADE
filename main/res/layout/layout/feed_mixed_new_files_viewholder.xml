                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0"
                    android:textColor="#657786"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Comment Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
