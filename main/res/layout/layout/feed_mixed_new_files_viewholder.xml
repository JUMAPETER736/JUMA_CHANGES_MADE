                android:src="@drawable/document"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                android:text="date_time"
                app:layout_constraintBottom_toBottomOf="@id/followButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/followButton"
                app:layout_constraintVertical_bias="0.7" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginLeft="4dp"
                android:text="Username"
                android:layout_marginBottom="10dp"                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/profileImageView"
                app:layout_constraintLeft_toRightOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/profileImageView"
                app:layout_constraintVertical_bias="0.24" />

            <TextView
                android:id="@+id/handerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="@string/contentCreator"
                android:layout_marginTop="22dp"
                android:textColor="@color/gray_darkest"
                android:textSize="13sp"
                android:padding="7dp"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintLeft_toRightOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/textView"
                app:layout_constraintVertical_bias="0.428" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/followButton"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginEnd="48dp"
