    <!-- res/layout/item_text.xml -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/document"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="16dp"
        android:text="Username"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/profileImageView"
        app:layout_constraintLeft_toRightOf="@id/profileImageView"
        app:layout_constraintTop_toTopOf="@id/profileImageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:background="@drawable/feed_follow_button_border"
        android:text="Follow"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        />

    <net.expandable.ExpandableTextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:justificationMode="inter_word"
        android:text="ctetur adipiscing elit, sed do eiusmod ghgfdgfd tempor"
        android:textSize="16sp"
        app:collapse_lines="3"
        app:collapsedLines="3"
        app:expanded="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageView" />
