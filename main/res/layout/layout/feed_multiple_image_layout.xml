    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="@color/blueJeans"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/feedImageCardView"
        app:layout_constraintRight_toRightOf="@+id/feedImageCardView"
        app:layout_constraintTop_toBottomOf="@+id/caption" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:padding="5dp"
        android:text="Date - Time"
        app:layout_constraintTop_toBottomOf="@id/feedImageCardView" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:padding="10dp"
        android:src="@drawable/favorite_svgrepo_com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_time"
        app:tint="@color/blueJeans" />

    <TextView
        android:id="@+id/likesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/like"
        app:layout_constraintRight_toRightOf="@+id/like"
        app:layout_constraintTop_toBottomOf="@+id/like" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
