                <androidx.cardview.widget.CardView
                    android:id="@+id/shortVideoThumbNail"
                    android:layout_width="250dp"
                    android:layout_height="292dp"
                    android:layout_gravity="center"
                    android:padding="40dp"
                    android:visibility="visible"
                    app:cardCornerRadius="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iconLayout">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shortVideoThumbNail"
                        app:layout_constraintVertical_bias="0.114" />

                    <ImageView
                        android:id="@+id/shortThumbNail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="40dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:srcCompat="@drawable/attach_svgrepo_com" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/multipleImagesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:visibility="visible">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPager2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="@+id/circleIndicator" />

                        <me.relex.circleindicator.CircleIndicator3
                            android:id="@+id/circleIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/subTopicstwo"
                        android:layout_width="48dp"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:src="@drawable/topic2_svgrepo_com" />

                    <ImageView
                        android:id="@+id/add_location"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:adjustViewBounds="true"
                        android:padding="12dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:srcCompat="@drawable/location" />
                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:text="Upload File"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shortVideoThumbNail"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>
            <!-- Quoted Tweet Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quotedTweetContainer"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/composeSection"
                android:layout_marginStart="65dp"
                android:layout_marginBottom="16dp"
                android:background="#F7F9FA"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">
                    <!-- Original Tweet Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/originalPostProfileImage"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/originalPostUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="originalPostUsername"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/originalPostHandle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="originalPostHandle"
                                android:textColor="#657786"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Original Tweet Content -->
                    <TextView
                        android:id="@+id/originalFeedTextContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="12dp"
                        android:text="original post content will be added here"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/othertweeks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/at" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/topic2_svgrepo_com" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/multipleImagesContainers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:visibility="gone">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="NotSibling" />

                        <me.relex.circleindicator.CircleIndicator3
                            android:id="@+id/circleIndicators"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/documentImageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/document"
                            android:visibility="gone"
                            app:layout_constraintDimensionRatio="16:9"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />

                        <ImageView
                            android:id="@+id/artworkImageView"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:contentDescription="@string/content_description"
                            android:scaleType="centerCrop"
                            android:src="@drawable/music_placeholder"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@+id/artworkImageView">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/leftAudioDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="@string/duration" />

                                <TextView
                                    android:id="@+id/audioDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:text="@string/duration" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/playPauseButton"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/content_description"
                                    android:padding="10dp"
                                    android:src="@drawable/play_svgrepo_com" />

                                <SeekBar
                                    android:id="@+id/seekBar"
                                    style="@style/SeekBarNoThumb"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:padding="10dp"
                                    android:progress="0"
                                    android:progressTint="@color/bluejeans" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mixedFilesCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:clickable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/tags">

                        <ImageView
                            android:id="@+id/originalFeedImage"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:contentDescription="originalPost"
                            android:src="@drawable/imageplaceholder"
                            android:visibility="invisible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.114" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Inside the quotedTweetContainer's LinearLayout (after originalFeedTextContent) -->
                <!-- Add this block to handle nested original posts as links -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/nestedOriginalPostLinkContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/blueJeans"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="visible"
                    app:cardCornerRadius="8dp">

                    <!-- Link Preview Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/nested_user_profile"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/round_user"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nestedOriginalPostUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nested_user"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/nestedOriginalPostHandle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="nested_user"
                            android:textColor="#657786"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Link Preview Snippet -->
                    <TextView
                        android:id="@+id/nestedOriginalPostSnippet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="This is a preview of the nested original post text that..."
                        android:textColor="#14171A"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <!-- Inside the quotedTweetContainer's LinearLayout (after originalFeedTextContent) -->
                <!-- Add this block to handle nested original posts as links -->


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/navTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addMoreFeed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/shortVideoThumbNail"
                    app:layout_constraintStart_toEndOf="@id/shortVideoThumbNail"
                    app:layout_constraintTop_toTopOf="@id/shortVideoThumbNail">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/baseline_add_24"
                        app:tint="@color/blueJeans" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <Button
                android:id="@+id/postButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fill_button_color"
                android:text="Repost"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/shortThumbNails"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/gallery"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="3dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</LinearLayout>
