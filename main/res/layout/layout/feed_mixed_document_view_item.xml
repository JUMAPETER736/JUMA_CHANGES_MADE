<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/documentContainer"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <!-- PDF Cover Image -->
        <ImageView
            android:id="@+id/pdfImageView"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/documents" />

        <!-- Document Name -->
        <TextView
            android:id="@+id/documentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Document name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/pdfImageView"
            app:layout_constraintStart_toStartOf="@id/pdfImageView"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Number of Pages -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/documentName"
            app:layout_constraintStart_toStartOf="@id/documentName">

            <TextView
                android:id="@+id/numberOfPagesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/numberOfPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" pages"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Overlay for +N (default hidden) -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:background="#80000000"
            android:scaleType="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/pdfImageView"
            app:layout_constraintStart_toStartOf="@id/pdfImageView"
            app:layout_constraintEnd_toEndOf="@id/pdfImageView" />

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+99"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="@id/imageView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>