<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"

    android:layout_height="?android:actionBarSize">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backIcon"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/feedProfilePic"
        android:src="@drawable/profilepic2"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/backIcon"
        app:layout_constraintTop_toTopOf="@+id/backIcon"
        app:layout_constraintBottom_toBottomOf="@id/backIcon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_name"
        app:layout_constraintLeft_toRightOf="@+id/feedProfilePic"
        app:layout_constraintTop_toTopOf="@+id/feedProfilePic"
        app:layout_constraintBottom_toBottomOf="@id/feedProfilePic"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/username"
        android:textSize="16sp"
        />
