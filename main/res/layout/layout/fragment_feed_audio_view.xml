    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tags"
        android:id="@+id/audioLinearLayout"
        android:layout_marginHorizontal="50dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:padding="10dp"
                    android:id="@+id/leftAudioDuration"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="end"
                    android:id="@+id/audioDuration"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:id="@+id/playPauseButton"
                    android:src="@drawable/play_svgrepo_com"
                    />

                <SeekBar
                    style="@style/SeekBarNoThumb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="end"
                    android:progress="0"
                    android:id="@+id/seekbar"
                    android:progressTint="@color/bluejeans"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/optionsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/like"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/comment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/chat_round_svgrepo_com_shorts"
                app:layout_constraintBottom_toBottomOf="@id/like"
                app:layout_constraintLeft_toRightOf="@id/like"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/feedCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/comment"
                app:layout_constraintRight_toRightOf="@id/comment"
                app:layout_constraintTop_toBottomOf="@+id/comment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/fav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/favorite_svgrepo_com__1_"
                app:layout_constraintBottom_toBottomOf="@id/like"
                app:layout_constraintLeft_toRightOf="@id/comment"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/favCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/comment"
                app:layout_constraintRight_toRightOf="@id/comment"
                app:layout_constraintTop_toBottomOf="@+id/comment" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/re"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:padding="10dp"
                android:src="@drawable/retweet_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/fav"
                app:layout_constraintLeft_toRightOf="@id/fav"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/retweetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="0"
                app:layout_constraintLeft_toLeftOf="@+id/re"
                app:layout_constraintRight_toRightOf="@+id/re"
                app:layout_constraintTop_toBottomOf="@+id/re" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/share_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/re"
                app:layout_constraintLeft_toRightOf="@id/re"
                app:tint="@color/blueJeans" />
        </LinearLayout>


        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/content_description"
            android:padding="12dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/share"
            app:layout_constraintLeft_toRightOf="@id/share"
            app:tint="@color/blueJeans" />
    </LinearLayout>


