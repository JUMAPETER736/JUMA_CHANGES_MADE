<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:id="@+id/feedTextLayoutContainer"
    xmlns:expandableTextView="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/feedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <!-- res/layout/item_text.xml -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/document"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="10dp"
                android:padding="16dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/profileImageView"
                app:layout_constraintLeft_toRightOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/profileImageView"
                app:layout_constraintVertical_bias="0.562" />

            <TextView
                android:id="@+id/handerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="40dp"
                android:padding="16dp"
                android:text="@string/contentCreator"
                android:textColor="@color/gray_darkest"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintLeft_toRightOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/textView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/feed_follow_button_border"
                android:backgroundTintMode="@color/blueJeans"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/options_vertical_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/followButton"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/followButton"
                app:tint="@color/blueJeans" />

            <com.colormoon.readmoretextview.ReadMoreTextView
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:justificationMode="inter_word"
                android:text="This is Expandable text this is a simple text, this is a testing text"
                android:textSize="16sp"
                app:colorClickableText="#039BE5"
                app:layout_constraintTop_toBottomOf="@id/profileImageView"
                app:trimCollapsedText="@string/read_more"
                app:trimExpandedText=""
                app:trimLength="50"
                app:trimMode="trimModeLength"
                expandableTextView:layout_editor_absoluteX="51dp" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:text="#SocialApp#Developerws#MalawiFire"
                android:textColor="@color/blueJeans"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caption" />
            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="#E1E8ED"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tags" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="160dp"
                android:padding="5dp"
                android:text="Date - Time"
                app:layout_constraintBottom_toBottomOf="@id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tags"
                app:layout_constraintTop_toTopOf="@id/textView"
                app:layout_constraintVertical_bias="0.765" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">


                <!-- Like Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/heart_svgrepo_com"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/likesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/comments"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/feedCommentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Favorite Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/favorite_svgrepo_com__1_"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/favoriteCounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Retweet Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reFeed"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/repeat_svgrepo_com"
                        app:tint="@color/blueJeans" />

                    <TextView
                        android:id="@+id/repostCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0"
                        android:textColor="#657786"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Share Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/share_svgrepo_com"
                        app:tint="@color/blueJeans" />
                </LinearLayout>

                <!-- More Options Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/content_description"
                        android:src="@drawable/options_vertical_svgrepo_com"
                        android:visibility="gone"
                        app:tint="@color/blueJeans" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>