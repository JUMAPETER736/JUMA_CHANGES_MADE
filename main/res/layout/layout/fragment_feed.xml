<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FeedFragment">

<!--    app:tabIndicator="@null"
  app:tabIndicatorColor="@color/bluejeans"
   app:tabIndicatorAnimationMode="elastic"
    app:tabIndicatorGravity="stretch"
  -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:contentDescription="@string/content_description"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        app:tabMode="fixed"
        app:tabIndicator="@null"
        app:tabSelectedTextColor="@color/bluejeans"
        app:tabTextColor="@android:color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:id="@+id/feedUploadView"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/times_svgrepo_com__1_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/blueJeans"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
        android:id="@+id/feedCancelView"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <!-- Left ImageView -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="16dp"
>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/feedUploadImageView"
                android:layout_width="30dp"
                android:scaleType="centerCrop"
                android:background="@drawable/feed_upload_1"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                app:tint="@color/blueJeans" />
        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="5"
            app:indicatorColor="@color/blueJeans"
            app:trackCornerRadius="4dp"
            app:trackThickness="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:progressTint="@color/blueJeans"
            android:scaleY="0.5" />

        <!-- Right Cancel ImageView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cancelContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cancelShortsUpload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/times_svgrepo_com"
                app:tint="@color/blueJeans" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/downloadProgressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <!-- Left ImageView -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/shortsDownloadImageView"
                android:layout_width="20dp"
                android:scaleType="centerCrop"
                android:background="@drawable/shorts_upload_1"
                android:adjustViewBounds="true"
                android:layout_height="20dp"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/shortsDownloadProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:progressTint="@color/white"
            android:scaleY="0.5" />

        <!-- Right Cancel ImageView -->
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/cancelShortsDownload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:src="@drawable/times_svgrepo_com"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fileFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_edit"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/bluejeans"
        android:contentDescription="@string/content_description"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/vnFloatingActionButton"
        app:layout_constraintEnd_toEndOf="@+id/vnFloatingActionButton"
        app:layout_constraintStart_toStartOf="@+id/vnFloatingActionButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/vnFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="40dp"
        app:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/bluejeans"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_baseline_mic_24"
        app:layout_constraintBottom_toTopOf="@+id/fabAction"
        app:layout_constraintEnd_toEndOf="@+id/fabAction"
        app:layout_constraintStart_toStartOf="@+id/fabAction" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fab_bg"
        android:contentDescription="@string/content_description"
        android:tint="@color/white"
        app:backgroundTint="@color/bluejeans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92"
        app:srcCompat="@drawable/baseline_add_24"
        app:tint="@color/white" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintVertical_bias="0.0">


    </androidx.viewpager2.widget.ViewPager2>
</androidx.constraintlayout.widget.ConstraintLayout>