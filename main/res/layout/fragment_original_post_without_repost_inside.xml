<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <!-- Use RelativeLayout as root container to position input at bottom -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Repost Container - now takes up space above input -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/inputContainer"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/repostContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/header_padding_horizontal"
                    android:background="@color/blueJeans">

                    <!-- Back Button -->
                    <ImageButton
                        android:id="@+id/cancelButton"
                        android:layout_width="@dimen/header_button_size"
                        android:layout_height="@dimen/header_button_size"
                        android:background="@android:color/transparent"
                        android:src="@drawable/cancel_svgrepo_com"
                        android:contentDescription="Back"
                        app:tint="@android:color/white" />

                    <!-- Post Title -->
                    <TextView
                        android:id="@+id/headerTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Post"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/header_text_size"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/headerMenuButton"
                        android:layout_width="@dimen/header_button_size"
                        android:layout_height="@dimen/header_button_size"
                        android:background="@android:color/transparent"
                        android:src="@drawable/options_vertical_svgrepo_com"
                        android:contentDescription="More options"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <!-- Media Container - Edge to Edge -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/mixedFilesCardViews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/originalFeedImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="@dimen/media_max_height"
                            android:scaleType="centerCrop"
                            android:contentDescription="Repost media"
                            android:src="@drawable/imageplaceholder"
                            android:visibility="gone"
                            android:background="@color/white"/>

                        <LinearLayout
                            android:id="@+id/multipleMediaContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="@color/white">
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/multipleAudiosContainers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="@color/white">
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            android:background="@color/white"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Quoted Post -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quotedPostCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:id="@+id/originalPostContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <!-- Quoted User Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/small_margin"
                                android:background="@color/white">

                                <FrameLayout
                                    android:layout_width="41dp"
                                    android:layout_height="41dp"
                                    android:background="@drawable/round_back_secondary"
                                    android:clipChildren="true">

                                    <ImageView
                                        android:id="@+id/originalPosterProfileImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/round_back_secondary"
                                        android:scaleType="centerCrop"
                                        android:contentDescription="Profile image" />
                                </FrameLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:background="@color/white">

                                    <TextView
                                        android:id="@+id/originalPosterName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Unknown User"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/quoted_username_size"
                                        android:textStyle="bold"
                                        android:background="@color/white" />

                                    <TextView
                                        android:id="@+id/tvQuotedUserHandle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="\@SoftwareDeveloper"
                                        android:textColor="@color/gray_dark"
                                        android:textSize="@dimen/quoted_handle_size"
                                        android:background="@color/white" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/date_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:text="date"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray_dark"
                                    android:background="@color/white"/>

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/followButton"
                                    android:layout_width="@dimen/follow_button_width"
                                    android:layout_height="@dimen/follow_button_height"
                                    android:background="@drawable/fill_button_color"
                                    android:text="Follow"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/button_text_size"
                                    android:clickable="true"
                                    android:focusable="true"/>

                            </LinearLayout>

                            <!-- Quoted Content -->
                            <TextView
                                android:id="@+id/originalPostText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="4dp"
                                android:text="Big shoutout to Social Circuit App..."
                                android:textColor="@color/black"
                                android:textSize="@dimen/quoted_body_size"
                                android:visibility="gone"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/tvQuotedHashtags"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="4dp"
                                android:text="#SoftwareAppreciation #GameChanger"
                                android:textColor="@color/blueJeans"
                                android:textSize="@dimen/quoted_hashtag_size"
                                android:visibility="gone"
                                android:background="@color/white" />

                            <!-- Quoted Media - Edge to Edge -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/mixedFilesCardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:background="@color/white"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/originalFeedImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:maxHeight="@dimen/quoted_media_max_height"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="Original post media"
                                    android:src="@drawable/imageplaceholder"
                                    android:visibility="gone"
                                    android:background="@color/white" />

                                <FrameLayout
                                    android:id="@+id/videoContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:background="@color/white">
                                </FrameLayout>

                                <LinearLayout
                                    android:id="@+id/multipleAudiosContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    android:background="@color/white">
                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:visibility="gone"
                                    android:background="@color/white"
                                    />

                            </androidx.cardview.widget.CardView>

                            <ImageView
                                android:id="@+id/ivQuotedPostImage"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/legacy_image_height"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                android:src="@drawable/imageplaceholder"
                                android:background="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:paddingVertical="@dimen/dimen_4">

                        <!-- Like -->
                        <LinearLayout
                            android:id="@+id/like_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/action_item_padding">

                            <ImageView
                                android:id="@+id/likeButtonIcon"
                                android:layout_width="@dimen/action_icon_size"
                                android:layout_height="@dimen/action_icon_size"
                                android:contentDescription="Like"
                                android:src="@drawable/heart_svgrepo_com"
                                android:clickable="true"
                                android:focusable="true"
                                app:tint="@color/blueJeans" />

                            <TextView
                                android:id="@+id/likesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/action_text_margin"
                                android:text="0"
                                android:textColor="#657786"
                                android:textSize="@dimen/action_text_size" />
                        </LinearLayout>

                        <!-- Comment -->
                        <LinearLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/action_item_padding">

                            <ImageView
                                android:id="@+id/commentButtonIcon"
                                android:layout_width="@dimen/action_icon_size"
                                android:layout_height="@dimen/action_icon_size"
                                android:contentDescription="Comment"
                                android:src="@drawable/comments"
                                android:clickable="true"
                                app:tint="@color/blueJeans" />

                            <TextView
                                android:id="@+id/commentCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/action_text_margin"
                                android:text="0"
                                android:textColor="#657786"
                                android:textSize="@dimen/action_text_size" />

                        </LinearLayout>

                        <!-- Favorite -->
                        <LinearLayout
                            android:id="@+id/favoriteSection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/action_item_padding">

                            <ImageView
                                android:id="@+id/favoritesButton"
                                android:layout_width="@dimen/action_icon_size"
                                android:layout_height="@dimen/action_icon_size"
                                android:contentDescription="Favorite"
                                android:src="@drawable/favorite_svgrepo_com__1_"
                                android:clickable="true"
                                android:focusable="true"
                                app:tint="@color/blueJeans" />

                            <TextView
                                android:id="@+id/favoriteCounts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/action_text_margin"
                                android:text="0"
                                android:textColor="#657786"
                                android:textSize="@dimen/action_text_size" />
                        </LinearLayout>

                        <!-- Repost -->
                        <LinearLayout
                            android:id="@+id/repost_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/action_item_padding">

                            <ImageView
                                android:id="@+id/repostPost"
                                android:layout_width="@dimen/action_icon_size"
                                android:layout_height="@dimen/action_icon_size"
                                android:contentDescription="Repost"
                                android:src="@drawable/repeat_svgrepo_com"
                                android:clickable="true"
                                android:focusable="true"
                                app:tint="@color/blueJeans" />

                            <TextView
                                android:id="@+id/repostCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/action_text_margin"
                                android:text="0"
                                android:textColor="#657786"
                                android:textSize="@dimen/action_text_size" />
                        </LinearLayout>

                        <!-- Share -->
                        <LinearLayout
                            android:id="@+id/share_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/action_item_padding">

                            <ImageView
                                android:id="@+id/shareButton"
                                android:layout_width="@dimen/action_icon_size"
                                android:layout_height="@dimen/action_icon_size"
                                android:contentDescription="Share"
                                android:src="@drawable/share_svgrepo_com"
                                android:clickable="true"
                                android:focusable="true"
                                app:tint="@color/blueJeans" />

                            <TextView
                                android:id="@+id/shareCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/action_text_margin"
                                android:text="0"
                                android:textColor="#657786"
                                android:textSize="@dimen/action_text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Bottom Divider Line -->
                    <View
                        android:id="@+id/bottomDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1E8ED" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Reply Input Field Container - Fixed at bottom -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Top border line for input container -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E8ED" />

            <EditText
                android:id="@+id/replyInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Post your reply"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#808080"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>