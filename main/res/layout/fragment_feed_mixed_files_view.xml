<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layoutDescription="@xml/fragment_feed_video_view_scene"
    tools:context=".User_Interface.fragments.feed.feedviewfragments.FeedMixedFilesViewFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/feed_view_custom" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_frame"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caption"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="10dp"
        tools:text="bnfuiwdhbfonsdonvfsodncvosnmodncondeo"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blueJeans"
        tools:text="tag1"
        app:layout_constraintTop_toBottomOf="@+id/caption" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/multipleImagesContainer"
        android:visibility="visible"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/tags"
        app:layout_constraintBottom_toTopOf="@+id/clickContainer"
        android:layout_marginTop="10dp"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/viewPager"
            app:layout_constraintBottom_toTopOf="@+id/circleIndicator"
            />

        <me.relex.circleindicator.CircleIndicator3
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/circleIndicator"
            android:background="@color/gray_dark_transparent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clickContainer"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/likeButtonIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/content_description"
                android:padding="10dp"
                android:src="@drawable/heart_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/likeButtonIcon"
                app:layout_constraintRight_toRightOf="@id/likeButtonIcon"
                app:layout_constraintTop_toBottomOf="@+id/likeButtonIcon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            >

            <ImageView
                android:id="@+id/commentButtonIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/content_description"
                android:padding="12dp"
                android:src="@drawable/comments"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/feedCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/commentButtonIcon"
                app:layout_constraintRight_toRightOf="@id/commentButtonIcon"
                app:layout_constraintTop_toBottomOf="@+id/commentButtonIcon" />

        </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginStart="20dp"
          >
          <ImageView
              android:id="@+id/favoriteSection"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_marginStart="5dp"
              android:contentDescription="@string/content_description"
              android:padding="12dp"
              android:src="@drawable/favorite_svgrepo_com__1_"
              app:layout_constraintBottom_toBottomOf="@id/likeButtonIcon"
              app:layout_constraintLeft_toRightOf="@id/commentButtonIcon"
              app:tint="@color/blueJeans" />
          <TextView
              android:id="@+id/favoriteCounts"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:layout_marginTop="20dp"
              app:layout_constraintLeft_toLeftOf="@+id/favoriteSection"
              app:layout_constraintRight_toRightOf="@+id/favoriteSection"
              app:layout_constraintTop_toBottomOf="@+id/favoriteSection" />

      </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            >
            <ImageView
                android:id="@+id/re"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="12dp"
                android:src="@drawable/repeat_svgrepo_com"
                app:layout_constraintBottom_toBottomOf="@id/favoriteSection"
                app:layout_constraintLeft_toRightOf="@id/favoriteSection"
                app:tint="@color/blueJeans" />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/retweetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toLeftOf="@+id/re"
                app:layout_constraintRight_toRightOf="@+id/re"
                app:layout_constraintTop_toBottomOf="@+id/re" />



        </LinearLayout>

        <ImageView
            android:id="@+id/shareButtonIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/content_description"
            android:padding="12dp"
            android:src="@drawable/share_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/re"
            app:layout_constraintLeft_toRightOf="@id/re"
            app:tint="@color/blueJeans" />

        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/content_description"
            android:padding="12dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/shareButtonIcon"
            app:layout_constraintLeft_toRightOf="@id/shareButtonIcon"
            app:tint="@color/blueJeans" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>