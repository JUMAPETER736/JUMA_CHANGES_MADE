<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".User_Interface.shorts.UploadShortsActivity">

    <!-- Full Screen Video Container (initially hidden) -->
    <FrameLayout
        android:id="@+id/fullScreenVideoContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Full Screen Video View -->
        <VideoView
            android:id="@+id/fullScreenVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <!-- Full Screen Controls Overlay -->
        <RelativeLayout
            android:id="@+id/fullScreenControlsOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true">

            <!-- Close Full Screen Button -->
            <ImageView
                android:id="@+id/closeFullScreenButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Exit full screen"
                android:focusable="true"
                android:padding="12dp"
                android:src="@drawable/cancel_svgrepo_com"
                app:tint="@color/white" />

            <!-- Full Screen Play/Pause Button -->
            <ImageView
                android:id="@+id/fullScreenPlayPauseButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Play/Pause video"
                android:focusable="true"
                android:padding="20dp"
                android:src="@drawable/baseline_pause_white_24"
                android:visibility="gone"
                app:tint="@color/white" />

            <!-- SeekBar at the bottom -->
            <SeekBar
                android:id="@+id/bottomShortsVideoProgressSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="16dp"
                android:max="100"
                android:progress="0"
                android:minHeight="4dp"
                android:maxHeight="4dp"
                android:progressTint="@color/bluejeans"
                android:progressBackgroundTint="@color/dark_gray"
                android:thumb="@null"
                android:splitTrack="false"
                android:visibility="visible" />

            <!-- Video Duration Text (positioned at the end of SeekBar) -->
            <TextView
                android:id="@+id/videoDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="10dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:gravity="center_vertical" />

        </RelativeLayout>
    </FrameLayout>

    <!-- App Bar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bluejeans"
        android:icon="@null"
        android:label="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <!-- Cancel Icon -->
        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="@string/back_icon"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/cancel_svgrepo_com"
            app:tint="@color/white" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_short"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- More Icon -->
        <ImageView
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="More options"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/options_vertical_svgrepo_com"
            app:tint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Video Thumbnail Section - 50% of screen height, full width -->
    <androidx.cardview.widget.CardView
        android:id="@+id/shortVideoThumbNail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="8dp"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/play_button_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/shortThumbNail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Clickable overlay for the entire video area -->
            <View
                android:id="@+id/videoClickableOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />

            <!-- Play Button in Center -->
            <ImageView
                android:id="@+id/playButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="Play video"
                android:padding="20dp"
                android:clickable="false"
                android:focusable="false"
                app:tint="@color/white" />

            <!-- Pause Button (initially hidden) -->
            <ImageView
                android:id="@+id/pauseButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="Pause video"
                android:padding="20dp"
                android:src="@drawable/baseline_pause_white_24"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                app:tint="@color/white" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/circleIndicator"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:background="@color/black"
                android:visibility="visible" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Select Cover Section -->
    <TextView
        android:id="@+id/selectCoverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Select cover"
        android:textColor="@color/blueJeanse"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortVideoThumbNail" />

    <ProgressBar
        android:id="@+id/thumbnailProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/recyclerViewContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectCoverText">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/interactionsBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bluejeans"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/saveChanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Select Cover from Camera Roll"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Caption Input -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_4"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_top_bottom_border"
        android:ems="10"
        android:gravity="top"
        android:hint="Caption your content to make it interesting up to 4000 words..."
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:padding="4dp"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interactionsBox" />

    <!-- Options Layout - Horizontal Grid -->
    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Filter Indicator -->
            <TextView
                android:id="@+id/filterIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/filterIndicatorBackground"
                android:padding="8dp"
                android:text="Active Filters: 0"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:visibility="gone"
                android:gravity="center" />

            <!-- Topics Chips Container -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/topicsChipsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone" />

            </HorizontalScrollView>

            <!-- Location Badge -->
            <TextView
                android:id="@+id/locationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/location_badge_background"
                android:padding="8dp"
                android:text="ðŸ“ Location"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />

            <!-- Your existing LinearLayout with the four options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:elevation="2dp">

                <!-- Tag People -->
                <LinearLayout
                    android:id="@+id/tagPeopleLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/person_svgrepo_com" />

                    <TextView
                        android:id="@+id/tagPeopleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag people"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Add Topics -->
                <LinearLayout
                    android:id="@+id/topics_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/topic2_svgrepo_com" />

                    <TextView
                        android:id="@+id/topicsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add topics"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Add Location -->
                <LinearLayout
                    android:id="@+id/location_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/location_svgrepo_com" />

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add location"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Add More Feed -->
                <LinearLayout
                    android:id="@+id/addMoreFeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/baseline_add_24"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Add more"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Feed RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Bottom Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconLayout">

        <!-- Draft Button -->
        <Button
            android:id="@+id/draftButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/fill_button_color"
            android:paddingHorizontal="32dp"
            android:text="Save Draft"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Post Button -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/fill_button_color"
            android:paddingHorizontal="32dp"
            android:text="Post"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>