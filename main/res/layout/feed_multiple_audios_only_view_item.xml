<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:visibility="gone" />

    <!-- Apply corner radius to ImageView2 using ShapeableImageView -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CustomItemCornerViewRadius" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Apply corner radius to artworkImageView using ShapeableImageView -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/artworkImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/music_icon"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/CustomItemCornerViewRadius" />

            <!-- UPDATED: Add corner radius to the LinearLayout using CardView wrapper -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/artworkLayoutWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/dark_gray">

                <LinearLayout
                    android:id="@+id/artworkLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/dark_gray">

                    <!-- Apply corner radius to artworkVn using ShapeableImageView -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/artworkVn"
                        android:layout_width="120dp"
                        android:layout_height="250dp"
                        android:src="@drawable/ic_audio_white_icon"
                        app:shapeAppearanceOverlay="@style/CustomItemCornerViewRadius" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                tools:ignore="MissingClass">

                <!-- Apply corner radius to playbutton using ShapeableImageView -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/playbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:src="@drawable/play_svgrepo_com"
                    app:shapeAppearanceOverlay="@style/CustomItemCornerViewRadius" />

                <com.uyscuti.social.circuit.utils.waveformseekbar.WaveformSeekBar
                    android:id="@+id/waveSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:progress="0"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:gravity="end"
                    android:visibility="gone"
                    android:progress="0"
                    android:progressTint="@color/bluejeans" />
            </LinearLayout>
        </LinearLayout>

        <!-- Audio Duration with Icon at Bottom-Left -->
        <LinearLayout
            android:id="@+id/audioDurationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_audio_white_icon"
                android:contentDescription="Audio icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/audioDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textColor="@color/cardBackgroundTint"
            android:textSize="32sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>