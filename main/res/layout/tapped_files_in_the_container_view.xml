<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    app:cardElevation="0dp">

    <!-- Document Viewer Full Height Container -->
    <ScrollView
        android:id="@+id/documentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="WebViewLayout">

            <WebView
                android:id="@+id/documentWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

    <!-- Main Post Container -->
    <LinearLayout
        android:id="@+id/postContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:paddingTop="@dimen/dimen_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:src="@drawable/cancel_svgrepo_com"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:tint="@android:color/white" />

            <!-- Options Menu Button - Top Right -->
            <ImageButton
                android:id="@+id/headerMenuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options"
                android:src="@drawable/options_vertical_svgrepo_com"
                android:scaleType="fitCenter"
                app:tint="@android:color/white" />

            <!-- Profile Icon - Bottom Left, First -->
            <ImageView
                android:id="@+id/userProfileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/cancelButton"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="@dimen/dimen_8"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:src="@drawable/flash21" />

            <!-- Full Name TextView - Next to Profile Icon -->
            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userProfileIcon"
                android:layout_below="@id/cancelButton"
                android:layout_marginStart="12dp"
                android:text="Uy Scuti"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Username TextView - Below Full Name -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userProfileIcon"
                android:layout_below="@id/fullNameTextView"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:text="\@uyscuti"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Follow Button - Bottom Right -->
            <Button
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/headerMenuButton"
                android:layout_marginEnd="16dp"
                android:minWidth="80dp"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/rounded_background_corners"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <!-- Main Content Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000">

            <!-- ViewPager for swiping between posts -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000" />

            <!-- Video Player Container with ScrollView -->

            <ScrollView
                android:id="@+id/videoScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/videoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#000000">

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@android:color/black"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/videoThumbnailView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:background="@android:color/black" />

                        <ProgressBar
                            android:id="@+id/videoProgressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@android:color/white" />

                    </RelativeLayout>

                </FrameLayout>
            </ScrollView>

            <!-- Audio Player Container with ScrollView -->
            <ScrollView
                android:id="@+id/audioScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/audioContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/audioArtworkView"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_audio_file_24" />

                    <SeekBar
                        android:id="@+id/audioSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/audioArtworkView"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/audioSeekBar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/currentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/totalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/playPauseButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_below="@id/currentTime"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/play"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
            </ScrollView>

            <!-- Document Viewer Container -->
            <RelativeLayout
                android:id="@+id/documentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- Document Thumbnail -->
                <ImageView
                    android:id="@+id/documentThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/documents" />

                <!-- File Type Icon - Top Left Corner -->
                <ImageView
                    android:id="@+id/fileTypeIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"
                    android:elevation="8dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    android:src="@drawable/documents" />

            </RelativeLayout>

            <!-- Image Viewer Container with ScrollView -->
            <ScrollView
                android:id="@+id/imageScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />

                    <ProgressBar
                        android:id="@+id/imageProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </ScrollView>
        </FrameLayout>

        <!-- Dots Indicator -->
        <LinearLayout
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp" />

        <LinearLayout
            android:id="@+id/bottomActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:weightSum="5">

            <!-- Comment Section -->
            <LinearLayout
                android:id="@+id/commentLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/commentButtonIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Comments"
                    android:src="@drawable/comments"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="1K" />
            </LinearLayout>

            <!-- Retweet Section -->
            <LinearLayout
                android:id="@+id/repostSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/repostPost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Retweet"
                    android:src="@drawable/repeat_svgrepo_com"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/repostCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="1.2K" />
            </LinearLayout>

            <!-- Like Section -->
            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/likeButtonIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Like"
                    android:src="@drawable/heart_svgrepo_com"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/likesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="9.8K" />
            </LinearLayout>

            <!-- Views Section -->
            <LinearLayout
                android:id="@+id/viewsSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Views"
                    android:src="@drawable/favorite_svgrepo_com__1_"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/viewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="6.4K" />
            </LinearLayout>

            <!-- Share Section -->
            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/shareButtonIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Share"
                    android:src="@drawable/share_svgrepo_com"
                    android:scaleType="fitCenter"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/shareCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="109" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reply Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/replyInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bottom_input_field_dark_gray_color"
                android:gravity="center_vertical"
                android:hint="Post your reply"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#808080"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>