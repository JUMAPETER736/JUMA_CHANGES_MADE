<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Sheet Handle -->
    <View
        android:id="@+id/bottomSheetHandle"
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:background="@color/gray_light"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primary Action Group -->
    <LinearLayout
        android:id="@+id/primaryActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetHandle">

        <!-- Save -->
        <LinearLayout
            android:id="@+id/downloadAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:tint="#F5F9FF"
            android:background="?attr/selectableItemBackgroundBorderless">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:tint="#F5F9FF"
                app:strokeColor="@color/gray_light"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/download_minimalistic_svgrepo_com"
                    android:contentDescription="Save"
                    app:tint="@color/blueJeans" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Save"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Share -->
        <LinearLayout
            android:id="@+id/shareAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_light"
                app:tint="#F5F9FF">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share"
                    android:contentDescription="Share"
                    app:tint="@color/blueJeans" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Share"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Repost -->
        <LinearLayout
            android:id="@+id/repostAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_light">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/retweet_svgrepo_com"
                    android:contentDescription="Repost"
                    app:tint="@color/blueJeans" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Repost"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Copy Link -->
        <LinearLayout
            android:id="@+id/copyLinkAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_light">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_copy"
                    android:contentDescription="Copy Link"
                    app:tint="@color/blueJeans" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Copy link"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/gray_light"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/primaryActions" />

    <!-- Secondary Options -->
    <LinearLayout
        android:id="@+id/secondaryOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <!-- Follow/Unfollow Option -->
        <LinearLayout
            android:id="@+id/followUnfollowOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/followUnfollowIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/user_circle_svgrepo_com"
                android:contentDescription="Follow/Unfollow"
                app:tint = "@color/blueJeans"
                 />

            <TextView
                android:id="@+id/followUnfollowText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Unfollow"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Not Interested Option -->
        <LinearLayout
            android:id="@+id/notInterestedOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/notInterestedIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/not_interested"
                android:contentDescription="I don't like this post"
                app:tint="@color/blueJeans" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not interested in this post"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop seeing post like this"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hide Post Option -->
        <LinearLayout
            android:id="@+id/hidePostOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/hidePostIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/hide_svgrepo_com"
                android:contentDescription="Hide Post"
                app:tint="@color/blueJeans" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hide post"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See fewer posts of this user"
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>

        <!-- Report Option -->
        <LinearLayout
            android:id="@+id/reportOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/reportIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/report_user_icon"
                android:contentDescription="Report"
                app:tint="@color/red" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/reportText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Report"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User will not know who has reported "
                    android:textSize="13sp"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="sans-serif" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>