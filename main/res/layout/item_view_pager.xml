<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Image View for displaying images -->
    <ImageView
        android:id="@+id/mediaImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <!-- Pause Indicator -->
    <ImageView
        android:id="@+id/pauseIndicator"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:src="@drawable/baseline_pause_white_24"
        android:visibility="gone"
        android:elevation="10dp" />

    <!-- Player View for videos - full screen -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/mediaPlayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:show_buffering="never"
        app:use_controller="false"
        app:surface_type="texture_view"
        app:resize_mode="zoom" />

    <!-- Audio Container - minimal display with artwork -->
    <RelativeLayout
        android:id="@+id/audioContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <!-- Background for audio -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <!-- Audio Icon for display -->
<!--        <ImageView-->
<!--            android:id="@+id/audioIcon"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="120dp"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:visibility="gone"-->
<!--            app:tint="@color/white" />-->

        <!-- Hidden PlayerView for audio control -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/audioPlayerView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            app:show_buffering="never"
            app:use_controller="false" />

    </RelativeLayout>

    <!-- Document Container -->
    <LinearLayout
        android:id="@+id/documentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <!-- Document Icon -->
        <ImageView
            android:id="@+id/documentIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/text_placeholder"
            app:tint="@color/white" />

        <!-- Document Name -->
        <TextView
            android:id="@+id/documentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="2"
            android:text="Document Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Open document hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap to open"
            android:textColor="@color/white_three"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Bottom container for video and audio controls -->
    <LinearLayout
        android:id="@+id/mediaControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- Play/Pause Button -->
        <ImageView
            android:id="@+id/fullScreenPlayPauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:contentDescription="Play or Pause"
            android:padding="8dp"
            app:tint="@color/white" />

        <!-- Duration Text -->
        <TextView
            android:id="@+id/videoDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/bottomShortsVideoProgressSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:max="100" />

    </LinearLayout>

</RelativeLayout>