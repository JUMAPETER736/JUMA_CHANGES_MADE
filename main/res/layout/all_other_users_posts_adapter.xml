<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedMixedFilesContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Main Post Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainPostCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Header Section -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/documents"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@id/profileImageView"
                app:layout_constraintTop_toTopOf="@id/profileImageView"
                app:layout_constraintEnd_toStartOf="@id/date_time" />

            <TextView
                android:id="@+id/handerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/contentCreator"
                android:textColor="@color/gray_darkest"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/textView"
                app:layout_constraintEnd_toEndOf="@id/textView" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="date"
                android:textSize="14sp"
                android:textColor="@color/gray_darkest"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@id/followButton"
                app:layout_constraintTop_toTopOf="@id/textView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/fill_button_color"
                android:paddingHorizontal="10dp"
                android:text="Follow"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@id/moreOptions"
                app:layout_constraintTop_toTopOf="@id/profileImageView"
                app:layout_constraintBottom_toBottomOf="@id/profileImageView" />

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/options_vertical_svgrepo_com"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/followButton"
                app:layout_constraintBottom_toBottomOf="@id/followButton"
                app:tint="@color/blueJeans" />

            <!-- Caption Section -->
            <com.colormoon.readmoretextview.ReadMoreTextView
                android:id="@+id/caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:justificationMode="inter_word"
                android:text="This is Expandable text this is a simple text, this is a testing text"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="3dp"
                android:visibility="visible"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginTop="@dimen/dimen_4"
                android:paddingBottom="@dimen/dimen_8"
                android:clickable="true"
                android:focusable="true"
                app:colorClickableText="#039BE5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImageView"
                app:trimCollapsedText="@string/read_more"
                app:trimExpandedText="@string/read_less"
                app:trimLength="100"
                app:trimMode="trimModeLength" />

            <!-- Tags Section -->
            <TextView
                android:id="@+id/tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="#SocialApp #Developers #MalawiFire"
                android:textColor="@color/blueJeans"
                android:textSize="14sp"
                android:visibility="gone"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caption" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Media Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mixedFilesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@id/mainPostCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/multipleAudiosContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Repost Container (for repost layout type) -->
    <LinearLayout
        android:id="@+id/repostContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mixedFilesCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Quoted Post Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/quotedPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/originalPostContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Quoted User Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/originalPosterProfileImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/round_back_secondary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/originalPosterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Original Poster"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvQuotedUserHandle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\@handle"
                            android:textColor="@color/gray_dark"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Quoted Post Content -->
                <TextView
                    android:id="@+id/originalPostText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Original post content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp" />

                <!-- Quoted Post Hashtags -->
                <TextView
                    android:id="@+id/tvQuotedHashtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="#hashtags"
                    android:textColor="@color/blueJeans"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Quoted Post Image -->
                <ImageView
                    android:id="@+id/originalFeedImage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imageplaceholder"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Interaction Buttons Container -->
    <LinearLayout
        android:id="@+id/interactionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/repostContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Like Button -->
        <LinearLayout
            android:id="@+id/likeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/likeButtonIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/heart_svgrepo_com"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Comment Button -->
        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/commentButtonIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/comments"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Favorite Button -->
        <LinearLayout
            android:id="@+id/favoriteLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/favoriteSection"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/favorite_svgrepo_com__1_"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/favoriteCounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Repost Button -->
        <LinearLayout
            android:id="@+id/repostLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/repostPost"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/repeat_svgrepo_com"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/repostCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Share Button -->
        <LinearLayout
            android:id="@+id/shareLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/shareButtonIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/share_svgrepo_com"
                app:tint="@color/blueJeans" />

            <TextView
                android:id="@+id/shareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="#657786"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Divider Line -->
    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E8ED"
        app:layout_constraintTop_toBottomOf="@id/interactionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>