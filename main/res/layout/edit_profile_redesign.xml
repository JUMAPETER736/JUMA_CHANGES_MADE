<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileEditRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".User_Interface.OtherUserProfile.UserProfileEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/baseline_arrow_back_black"
            app:title="Edit profile"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:titleTextColor="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="Save"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/bluejeans"
                style="@style/Widget.MaterialComponents.Button" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Fixed bottom save button for additional visibility -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/saveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:text="Save Changes"
        android:textColor="@color/white"
        app:backgroundTint="@color/bluejeans"
        app:icon="@drawable/baseline_check_24"
        app:iconTint="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/profileContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Image Section -->
            <FrameLayout
                android:id="@+id/headerImageContainer"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E1E8ED"
                    android:scaleType="centerCrop" />

                <View
                    android:id="@+id/headerImageOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <ImageView
                    android:id="@+id/editHeaderImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:src="@drawable/baseline_camera_alt_24"
                    app:tint="@color/white" />

            </FrameLayout>

            <!-- Profile Image Section -->
            <RelativeLayout
                android:id="@+id/profileImageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:paddingHorizontal="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/avatarCard"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/user" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addPhotoWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/avatarCard"
                    android:layout_alignBottom="@id/avatarCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/addPhoto"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@color/bluejeans"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/baseline_camera_alt_24"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Profile Fields Section -->
            <LinearLayout
                android:id="@+id/userProfileBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Username Section -->
                <TextView
                    android:id="@+id/emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emojir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#64dennis"
                    android:textColor="#657786"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E1E8ED" />

                <!-- First Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="First name"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">
                    <TextView
                        android:id="@+id/myNameTV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/myNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dennis" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- For compatibility with original code -->


                <ImageView
                    android:id="@+id/myNameEditBtn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/firstNameContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <!-- Last Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastNameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Last name"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">
                    <TextView
                        android:id="@+id/myLastNameTV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/myLastNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reuben" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- For compatibility with original code -->


                <ImageView
                    android:id="@+id/myLastNameEditBtn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lastNameContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <!-- Bio Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bioLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bio"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="160">

                    <TextView
                        android:id="@+id/bioTV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bioET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:text="Software Developer" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- For compatibility with original code -->


                <ImageView
                    android:id="@+id/bioEditBTN"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/bioContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Legacy element with zero size but preserved ID -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/interactionsBox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>