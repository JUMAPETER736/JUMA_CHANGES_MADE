<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp"
    android:id="@+id/item01"
    >


    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Image (Round) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/round_placeholder"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="25dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/profilePic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:src="@drawable/profilepic2" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:fontFamily="@font/helvetica_regular"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- Center Text -->
            <TextView
                android:fontFamily="@font/helvetica_regular"
                android:id="@+id/notificationMessageUnfollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="has stopped following you "
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/gray_dark_transparent"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>
    <!-- Right Image and Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <!-- Right Image -->
        <ImageView
            android:id="@+id/rightImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="13dp"
            android:visibility="visible"
            android:src="@drawable/imageplaceholder"
            android:scaleType="centerCrop"/>

        <!-- Right Button -->
        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Back"
            android:layout_marginEnd="13dp"
            android:layout_gravity="center"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>